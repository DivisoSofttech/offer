        <addForeignKeyConstraint baseColumnNames="allocation_method_id"
                                 baseTableName="price_rule"
                                 constraintName="fk_price_rule_allocation_method_id"
                                 referencedColumnNames="id"
                                 referencedTableName="allocation_method"/>

